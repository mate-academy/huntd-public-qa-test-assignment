{
  "compilerOptions": {
    "lib": ["dom", "esnext"],
    "types": ["node"],
    "baseUrl": "./",
    "target": "es2021",
    "skipLibCheck": true,
    "moduleResolution": "node",
    "paths": {
      "@/*": ["./src/*"],
      "@tests/*": ["./tests/*"],
    },
    "esModuleInterop": true,
    "allowJs": true,
  }
}
